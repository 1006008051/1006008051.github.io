{
    "compilerOptions": {
        "target": "esnext",
        "module": "esnext",
        // 这样就可以对 `this` 上的数据属性进行更严格的推断`
        "strict": true,
        "jsx": "preserve",
        "moduleResolution": "node",
        "suppressImplicitAnyIndexErrors": true,
        "noImplicitAny": false,
        "typeRoots": [
            "node_modules/@types",
            "types"
        ]
    },
    "exclude": [
        "node_modules"
    ],
    "include": [
        "main.ts",
        "packages/**/*.ts"
    ]
}